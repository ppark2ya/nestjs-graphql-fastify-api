{
  "name": "nestjs-graphql-fastify-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nx run-many -t build",
    "build:gateway": "nx build gateway",
    "build:auth": "nx build auth",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:gateway": "nest start gateway",
    "start:gateway:dev": "nest start gateway --watch",
    "start:gateway:debug": "nest start gateway --debug --watch",
    "start:gateway:prod": "node dist/apps/gateway/main",
    "start:auth": "nest start auth",
    "start:auth:dev": "nest start auth --watch",
    "start:auth:debug": "nest start auth --debug --watch",
    "start:auth:prod": "node dist/apps/auth/main",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "nx run-many -t test",
    "test:gateway": "jest --config apps/gateway/jest.config.ts",
    "test:auth": "jest --config apps/auth/jest.config.ts",
    "test:e2e:gateway": "jest --config apps/gateway/test/jest-e2e.json",
    "test:e2e:auth": "jest --config apps/auth/test/jest-e2e.json",
    "test:cov": "jest --coverage",
    "db:generate": "drizzle-kit generate --config apps/auth/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config apps/auth/drizzle.config.ts",
    "db:push": "drizzle-kit push --config apps/auth/drizzle.config.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.3.0",
    "@as-integrations/fastify": "^3.1.0",
    "@nestjs/apollo": "^13.2.3",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.2.3",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/throttler": "^6.5.0",
    "axios": "^1.13.4",
    "bcrypt": "^5.1.1",
    "dataloader": "^2.2.3",
    "drizzle-orm": "^0.44.0",
    "fastify": "^5.7.2",
    "graphql": "^16.12.0",
    "graphql-depth-limit": "^1.1.0",
    "jose": "^6.0.11",
    "mysql2": "^3.14.1",
    "opossum": "^9.0.0",
    "otplib": "^12.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nx/eslint": "^21.3.2",
    "@nx/jest": "^21.3.2",
    "@nx/js": "^21.3.2",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@types/bcrypt": "^5.0.2",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/opossum": "^8.1.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nx": "^21.3.2",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@monorepo/shared(.*)$": "<rootDir>/libs/shared/src$1"
    }
  }
}
