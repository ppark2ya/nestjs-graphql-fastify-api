{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gateway/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --noEmit -p apps/gateway/tsconfig.app.json",
          "cd apps/gateway && swc src -d ../../dist/apps/gateway --config-file .swcrc --strip-leading-paths"
        ],
        "cwd": "{workspaceRoot}",
        "parallel": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start gateway --watch",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config apps/gateway/jest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "test:e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --config apps/gateway/test/jest-e2e.json",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint \"apps/gateway/**/*.ts\" --fix",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
